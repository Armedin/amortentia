{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "dist", "src/client"]
}
